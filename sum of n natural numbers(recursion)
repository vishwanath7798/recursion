import java.util.*;
public class Main
{
    public static int sumOfNatural(int n){
        if(n==1){
            return 1;
        }
        return n+sumOfNatural(n-1);
    }
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		int n=sc.nextInt();
		System.out.print(sumOfNatural(n));
	}
}
